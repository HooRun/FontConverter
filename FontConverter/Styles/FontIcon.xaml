<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LVGLFontConverter">

    <Style x:Key="BaseFontIcon" TargetType="FontIcon">
        <Setter Property="FontFamily" Value="{StaticResource MaterialSymbols}" />
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ButtonFontIcon" TargetType="FontIcon"  BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Width" Value="28" />
        <Setter Property="Height" Value="28" />
    </Style>

    <Style x:Key="AppToolbarFontIcon" TargetType="FontIcon" BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="60"/>
        <!--<Setter Property="Width" Value="40"/>-->
        <Setter Property="Height" Value="48"/>
    </Style>

    <Style x:Key="GlyphToolbarFontIcon" TargetType="FontIcon"  BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="60"/>
        <!--<Setter Property="Width" Value="40" />-->
        <Setter Property="Height" Value="48" />
    </Style>

</ResourceDictionary>
