
<RadzenAccordion Multiple="false">
    <Items>
        <RadzenAccordionItem Text="@SharedResources.Text_Accordion_Font_Settings"
                             Icon="@SharedResources.Icon_Accordion_Font_Settings">
            <RadzenStack Orientation="Orientation.Vertical"
                         Gap="15">
                @* Font Name *@
                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Font Name:"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenTextBox />
                    </ChildContent>
                </RadzenFormField>
                @* Bit Per Pixel *@
                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Bit Per Pixel:"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenDropDown @bind-Value=@selectedBPP
                                        Data=@fontConverterLib.BitPerPixelList
                                        TextProperty="Value"
                                        ValueProperty="Key" />
                    </ChildContent>
                </RadzenFormField>
                @* Font Size *@
                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Size:"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenNumeric Min="8"
                                       Max="128"
                                       @bind-Value=@fontSize/>
                    </ChildContent>
                </RadzenFormField>
                @* Sub Pixel *@
                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Sub Pixel:"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenDropDown @bind-Value=@selectedSubPixel
                                        Data=@fontConverterLib.SubPixelList
                                        TextProperty="Value"
                                        ValueProperty="Key" />
                    </ChildContent>
                </RadzenFormField>
                @* Fallback Font Name *@
                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Fallback Font Name:"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenAutoComplete @bind-Value=@selectedFallbackFont
                                            Data=@fontConverterLib.EmbeddedLVGLFontsList
                                            TextProperty="Value"
                                            OpenOnFocus="true"
                                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" />
                    </ChildContent>
                </RadzenFormField>

            </RadzenStack>
        </RadzenAccordionItem>
    </Items>
</RadzenAccordion>

<style>

    .rz-accordion {
        border: 1px solid #EEE !important;
    }

    .rz-accordion-header {
        background-color: #F9F9F9 !important;
    }

    .rz-accordion-content {
        padding: 0.5rem !important;
    }

</style>
