
<RadzenAccordion Multiple="false">
    <Items>
        <RadzenAccordionItem Text="@SharedResources.Text_Accordion_Font_Adjusment"
                             Icon="@SharedResources.Icon_Accordion_Font_Adjusment">
            <RadzenStack Orientation="Orientation.Vertical"
                         Gap="15">

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Anti-Alias</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.AntiAlias/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Dither</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Dither/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Color Filter</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.ColorFilter/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Shader</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Shader/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Style"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenDropDown @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Style
                                        Data=@PredefinedData.GlyphStyleList
                                        TextProperty="Value"
                                        ValueProperty="Key" />
                    </ChildContent>
                </RadzenFormField>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Gamma</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSlider @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Gamma
                                      TValue="int"
                                      Min="0"
                                      Max="100"
                                      TValue="int"
                                      Style="width:90% !important;" />
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Threshold</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSlider @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Threshold
                                      TValue="int"
                                      Min="0"
                                      Max="100"
                                      TValue="int"
                                      Style="width:90% !important;" />
                    </RadzenColumn>
                </RadzenRow>

            </RadzenStack>
        </RadzenAccordionItem>
    </Items>
</RadzenAccordion>
