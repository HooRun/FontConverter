
<RadzenAccordion Multiple="false">
    <Items>
        <RadzenAccordionItem Text="@SharedResources.Text_Accordion_Font_Adjusment"
                             Icon="@SharedResources.Icon_Accordion_Font_Adjusment">
            <RadzenStack Orientation="Orientation.Vertical"
                         Gap="15">

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Anti-Alias</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.AntiAlias/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Dither</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Dither/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Color Filter</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.ColorFilter/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Shader</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenSwitch @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Shader/>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenFormField AllowFloatingLabel="@floatFieldLabel"
                                 Text="Style"
                                 Variant="@variant">
                    <ChildContent>
                        <RadzenDropDown @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Style
                                        Data=@PredefinedData.GlyphStyleList
                                        TextProperty="Value"
                                        ValueProperty="Key" />
                    </ChildContent>
                </RadzenFormField>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Gamma</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <GradienSlider @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Gamma
                                      TValue="int"
                                      Min="0"
                                      Max="100"
                                      TValue="int"
                                      IsReverse=true
                                      Change="@GammaChanged"
                                       Style="width:90% !important; height: 12px; background: #ffffff; background: linear-gradient(90deg, black 0%, white 100%); border: 2px solid #DDD !important;" />
                            <RadzenBadge BadgeStyle="BadgeStyle.Base" Text="@(string.Format("{0:0.0}",_GammaValue))" Style="width: 35% !important;" />
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>

                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="@colLeft">
                        <span style="color:#605e5c; font-size: 0.75rem;">Threshold</span>
                    </RadzenColumn>
                    <RadzenColumn Size="@colRight">
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                            <GradienSlider @bind-Value=@MainViewModel.FontAdjusmentsViewModel.Threshold
                                           TValue="int"
                                           Min="0"
                                           Max="255"
                                           TValue="int"
                                           Style="width:90% !important; height: 12px; background: #ffffff; background: linear-gradient(90deg, white 0%, black 100%); border: 2px solid #DDD !important;" />
                            <RadzenBadge BadgeStyle="BadgeStyle.Base" Text="@(string.Format("{0:N0}",MainViewModel.FontAdjusmentsViewModel.Threshold))" Style="width: 35% !important;" />
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>

            </RadzenStack>
        </RadzenAccordionItem>
    </Items>
</RadzenAccordion>
