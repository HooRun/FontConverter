<RadzenStack Orientation="Orientation.Vertical" class="glyphs-toolbar">
    <RadzenCard Variant="Variant.Text" class="" Style="padding: 0px !important;">
        <RadzenStack Orientation="Orientation.Horizontal" Gap="15px" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default"
                          Size="ButtonSize.Medium"
                          Icon="draw"
                          class="rz-border-radius-10" />

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default"
                          Size="ButtonSize.Medium"
                          Icon="delete"
                          Disabled=@MainViewModel.DeleteButtonDisabled
                          class="rz-border-radius-10" />

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default" Size="ButtonSize.Medium"
                          Icon="zoom_in"
                          Disabled=@MainViewModel.ZoomInButtonDisabled
                          Click="@MainViewModel.ZoomInChanged"
                          class="rz-border-radius-10" />

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default" Size="ButtonSize.Medium"
                          Icon="zoom_out"
                          Disabled=@MainViewModel.ZoomOutButtonDisabled
                          Click="@MainViewModel.ZoomOutChanged"
                          class="rz-border-radius-10" />

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default" Size="ButtonSize.Medium"
                          Icon="undo"
                          class="rz-border-radius-10" />

            <RadzenButton Variant="Variant.Outlined"
                          ButtonStyle="ButtonStyle.Dark"
                          Shade="Shade.Default" Size="ButtonSize.Medium"
                          Icon="redo"
                          class="rz-border-radius-10" />

        </RadzenStack>
    </RadzenCard>
</RadzenStack>